{
  "buildOptions": {
    "compile": {
      "include": [ "../Ecwid.Test.Real.Shared/**/*.cs" ],
      "warningsAsErrors": true
    }
  },

  "configurations": {
    "Release": {
      "buildOptions": {
        "optimize": true
      }
    }
  },

  "testRunner": "xunit",

  "dependencies": {
    "dotnet-test-xunit": "2.2.0-preview2-build1029",
    "Ecwid": { "target": "project" },
    "xunit": "2.1.0"
  },

  "frameworks": {
    "netcoreapp1.0": {
      "dependencies": {
        "Microsoft.NETCore.App": {
          "type": "platform",
          "version": "1.0.0"
        },
        "System.Diagnostics.TraceSource": "4.0.0"
      },
      "imports": [ "dotnet54" ]
    }
  }
}